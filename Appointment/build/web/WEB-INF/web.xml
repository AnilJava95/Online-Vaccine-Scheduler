<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
            http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>addAppointment</servlet-name>
        <servlet-class>controllers.addAppointment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addAppointment</servlet-name>
        <url-pattern>/addAppointment</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>editAppointment</servlet-name>
        <servlet-class>controllers.editAppointment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editAppointment</servlet-name>
        <url-pattern>/editAppointment</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>deleteAppointment</servlet-name>
        <servlet-class>controllers.deleteAppointment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteAppointment</servlet-name>
        <url-pattern>/deleteAppointment</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>checkSymptom.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
